{
  "version": 2,
  "builds": [
    {
      "src": "manage.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "buildCommand": "python manage.py collectstatic --noinput",
        "apt_packages": [
          "libmysqlclient-dev"
        ]
      }
    }
  ],
  "routes": [
    { "src": "/.*", "dest": "manage.py" }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "myproject.settings"
  },
  "installCommand": "pip install -r requirements.txt"
}